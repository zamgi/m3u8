{
  "manifest_version": 2,
  "name"       : "m3u8 file downloader 2.2",
  "description": "m3u8 file downloader firefox extension 2.2",
  "version"    : "2.2",
  "icons": {
    "32" : "img/m3u8.png",
    "128": "img/m3u8_128.png"
  },

  "applications": {
    "gecko": {
      "id": "{64807ac5-de2d-4f7f-8bac-da6e1e935a1b}",
      "strict_min_version": "79.0"
    }
  },

  "content_scripts": [{
    "matches": [ "*://*/*" ],
    "run_at" : "document_end"
  }],

  "permissions": [
    "storage",
    "webNavigation",
    "webRequest",
    "webRequestBlocking",
    "tabs",
    "activeTab",
    "notifications",
    "nativeMessaging",
    "*://*/*",
    "ftp://*/*"
  ],

  "browser_action": {
    "default_icon" : "img/m3u8.png",
    "default_popup": "m3u8.html"
  },

  "background": {
    "page": "m3u8_background.html"
  },

  "options_ui": {    
    "page"        : "m3u8_options.html",
    "chrome_style": true
  }
}
